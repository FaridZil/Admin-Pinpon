<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logger.LoginActivity"
    android:background="@drawable/background_fondo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageViewClickBackLogin"
                    android:layout_marginTop="25dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/ic_arrow_back"/>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_letras_iniciar_sesion" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="13dp"
                    android:background="@drawable/round_back_white10_20">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/ediTxtCorreo"
                            android:background="@drawable/round_back_low_nightmode10_20"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Correo eléctronico"
                            android:inputType="textEmailAddress"
                            android:drawableLeft="@drawable/ic_logo_email"
                            android:textColor="#FFFFFF"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="15dp"
                            android:textColorHint="#FFFFFF"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:background="@drawable/round_back_low_nightmode10_20"
                            android:id="@+id/ediTxtPass"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Contraseña"
                            android:drawableLeft="@drawable/ic_candado_grey"
                            android:paddingLeft="15dp"

                            android:drawablePadding="15dp"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:onClick="toMain"
                            android:id="@+id/log_in"
                            android:layout_marginTop="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Iniciar Sección"
                            android:textColor="@color/white"
                            android:background="@drawable/button_colors_green"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/olvide_mi_c"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Olvidastes la contraseña?"
                            android:textColor="#15781B"
                            android:onClick="toRecoveryPass"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    android:padding="13dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/signGoogle"
                            android:layout_width="180dp"
                            android:layout_height="60dp"
                            android:onClick="signIn"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_botones_de_icono_g_y_fb" />
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintBottom_toBottomOf="@+id/signGoogle"
                            app:layout_constraintEnd_toEndOf="@+id/signGoogle"
                            app:layout_constraintStart_toStartOf="@+id/signGoogle"
                            app:layout_constraintTop_toTopOf="@+id/signGoogle"
                            app:srcCompat="@drawable/ic_icono_de_google" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>