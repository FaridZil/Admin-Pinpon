<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EstadisticasTorneo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonTeams">
        <item name="android:background">@drawable/round_back_nightmode10_20</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ScreenBackground"><item name="android:background">#050508</item></style>
    <style name="CardBackground"><item name="android:background">@drawable/round_back_low_nightmode10_20</item></style>
    <style name="CardBackgroundBlack"><item name="android:background">@drawable/round_back_nightmode10_20</item></style>
    <style name="TextColor"><item name="android:textColor">#2D9434</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/ic_icono_de_google</item></style>

</resources>